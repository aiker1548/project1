#include<iostream>
#include<fstream>
#include<string>

using namespace std;

bool run(string name)
{
	ifstream file;
	char ch;
	int n = 0, f = 0;

	file.open(name + ".txt");

	if (!file.is_open())
	{
		cout << "Oops... Problems with file";
		f = 1;
	}
	else if (file.peek() == EOF)
	{
		cout << "File is empty";
		f = 1;
	}
	else
	{
		/*while (!file.eof())
		{
			file >> ch;
			if (ch == '.' || ch == '!' || ch == '?')
			{
				++n;
			}

		}*/
		while (true)
		{
			file >> ch;
			if (!file)
				break;
			else if (ch == '.' || ch == '!' || ch == '?')
			{				
					++n;
				
			}
		}
		if (n < 3)
		{
			cout << "We didn't find three sentences in the file";
			f = 1;
		}
	}
	
	file.close();

	if (f == 1)
		return false;
	else
		return true;
}
void exit(string name)
{
	ifstream file;
	char ch;
	int k = 0, n = 0;

	file.open(name + ".txt");

	while (true)
	{
		ch = file.get();
		if (!file)
			break;
		++n;
		if (ch == '.' || ch == '!' || ch == '?')
		{
			++k;
			if (k == 3)
				break;
		}

	}
	file.seekg(0);
	char* array = new char[n];

	int i = 0;
	char word;
	while (true)
	{
		word = file.get();
		if (!file)
			break;
		array[i] = word;
		
		
		++i;
	}

	for (int i = 0; i < n; ++i)
	{ 
		cout << array[i];
		
	}
	file.close();


}
int main()
{
	ifstream file;

	string name;
	

	cin >> name; 

	if (run(name))
	{
		exit(name);

	}

	
	return 0;
}
